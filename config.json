{
    "resources": ["cpu", "disk", "ram", "network"],
    "interval": 5,
    "constraints": {
      "cpu": 85,
      "disk": "2GB",
      "ram": 90,
      "network": "1GB"
    },
    "http_request": {
      "url": "http://example.com",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer token"
      },
      "body": {
        "data": "Resource alert: CPU is {cpu}%, Disk: {disk}, RAM: {ram}%, Network: {network}"
      }
    },
    "log": {
      "persist": 5,
      "enabled": true
    }
  }
  